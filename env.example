# OpsZen Environment Variables
#
# Copy this file to .env in the project root or ~/.opszen/.env
# Environment variables override settings in config.yaml
#
# IMPORTANT: Never commit .env files with actual credentials to version control!

# ============================================================================
# AWS Configuration
# ============================================================================

# AWS Profile to use (overrides config.yaml)
# AWS_PROFILE=default

# AWS Region (overrides config.yaml)
# AWS_REGION=us-west-2
# AWS_DEFAULT_REGION=us-west-2

# AWS Credentials (if not using AWS CLI profiles)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_SESSION_TOKEN=your_session_token_here

# ============================================================================
# SSH Configuration
# ============================================================================

# Default SSH user
# OPSZEN_SSH_USER=ec2-user

# Default SSH key file
# OPSZEN_SSH_KEY=~/.ssh/id_rsa

# SSH password (not recommended - use keys instead)
# OPSZEN_SSH_PASSWORD=your_password_here

# SSH passphrase for encrypted keys
# OPSZEN_SSH_PASSPHRASE=your_passphrase_here

# ============================================================================
# Docker Configuration
# ============================================================================

# Docker daemon host
# DOCKER_HOST=unix:///var/run/docker.sock
# DOCKER_HOST=tcp://192.168.1.100:2375

# Docker TLS verification (1 to enable, 0 to disable)
# DOCKER_TLS_VERIFY=1

# Path to Docker TLS certificates
# DOCKER_CERT_PATH=~/.docker/certs

# Docker registry credentials
# DOCKER_REGISTRY_URL=https://registry.example.com
# DOCKER_REGISTRY_USERNAME=myuser
# DOCKER_REGISTRY_PASSWORD=mypassword

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# OPSZEN_LOG_LEVEL=INFO

# Enable verbose output (1 for true, 0 for false)
# OPSZEN_VERBOSE=0

# Enable debug mode (1 for true, 0 for false)
# OPSZEN_DEBUG=0

# ============================================================================
# Application Settings
# ============================================================================

# Path to custom config file
# OPSZEN_CONFIG=~/.opszen/config.yaml

# Disable colored output (1 to disable, 0 to enable)
# OPSZEN_NO_COLOR=0

# Override theme (auto, light, dark)
# OPSZEN_THEME=auto

# ============================================================================
# API Keys and Tokens
# ============================================================================

# GitHub Personal Access Token (for updates, integrations)
# GITHUB_TOKEN=your_github_token_here

# Slack Webhook URL (for notifications)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email notifications (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=noreply@opszen.local

# ============================================================================
# Feature Flags
# ============================================================================

# Enable experimental features (1 to enable, 0 to disable)
# OPSZEN_EXPERIMENTAL=0

# Enable plugin system (1 to enable, 0 to disable)
# OPSZEN_PLUGINS=0

# ============================================================================
# Performance Settings
# ============================================================================

# Maximum parallel operations
# OPSZEN_MAX_PARALLEL=5

# Connection pool size
# OPSZEN_POOL_SIZE=10

# Cache TTL in seconds
# OPSZEN_CACHE_TTL=3600

# ============================================================================
# Development Settings
# ============================================================================

# Enable development mode (1 to enable, 0 to disable)
# OPSZEN_DEV_MODE=0

# Skip version checks
# OPSZEN_SKIP_VERSION_CHECK=0

# Mock external services for testing
# OPSZEN_MOCK_SERVICES=0
